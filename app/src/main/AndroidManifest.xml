<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="wada.programmics.thewada">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".ActivityClass.NotificationActivity"
            android:theme="@style/AppTheme.NoActionBar" ></activity>
        <activity
            android:name=".ActivityClass.PhoneVerificationActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ActivityClass.ForgotPasswordActivity"
            android:label="Reset Password" />
        <activity
            android:name=".ActivityClass.SubscriptionFormActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ActivityClass.MainCategoryActivity" />
        <activity
            android:name=".ActivityClass.RegistrationActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ActivityClass.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ActivityClass.HomeActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ActivityClass.SplashActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.razorpay.ApiKey"
            android:value="rzp_live_kWg0TaoJMTJsIU" />

        <receiver android:name=".PushNotification.NotificationReceiver" />

        <service android:name=".PushNotification.MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>