<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FragmentClass.HomeFragment">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/colorPrimary"
                android:id="@+id/relativelayout">

                <ImageView

                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/whitelogo"
                    android:layout_marginLeft="35dp"

                    />




            </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_marginTop="50dp"
        >



        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/colorPrimary"
                android:id="@+id/relativelayout12">

                <ImageView

                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/whitelogo"
                    android:layout_marginLeft="35dp"

                    />




            </RelativeLayout>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="110dp"
                app:cardCornerRadius="8dp"
                android:id="@+id/cardView1"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="1dp">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center">
                    
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/linearLayoutServices"
                        android:gravity="center">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:gravity="center"

                            android:background="@drawable/circlebg">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_services"/>
                        </RelativeLayout>
                        
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Services"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/linearLayoutAboutCard"
                        android:gravity="center">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:gravity="center"
                            android:background="@drawable/circlebg">
                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/ic_adhar"/>
                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="About Card"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/linearLayoutTravelCard"
                        android:orientation="vertical"
                        android:gravity="center">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:gravity="center"
                            android:background="@drawable/circlebg">
                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/ic_travel"/>
                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Travel Card"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/linearLayoutProduct"
                        android:gravity="center">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:gravity="center"
                            android:background="@drawable/circlebg">
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/ic_discount1"/>
                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Discount"/>
                    </LinearLayout>

                </LinearLayout>
                
            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cardView1"
                android:id="@+id/relativelayout1"
                android:layout_marginTop="10dp">
                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/pager"
                    android:layout_width="match_parent"
                    android:layout_height="175dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    />
                <me.relex.circleindicator.CircleIndicator
                    android:id="@+id/indicator"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    app:ci_drawable="@drawable/indicatorbg"
                    android:layout_below="@+id/pager"
                    />
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relativelayout2"
                android:orientation="vertical"
                android:layout_below="@id/relativelayout1">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Categories"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginLeft="17dp"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View All"
                        android:id="@+id/tvViewAll"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="17dp"
                        android:textColor="#000000"
                        android:gravity="center"
                        android:drawablePadding="5dp"
                        android:drawableRight="@drawable/ic_arrow"
                        android:layout_marginLeft="17dp"/>

                </RelativeLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#DBD8D8"
                    android:layout_marginTop="5dp"
                    />
                
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="5dp"
                    android:layout_marginTop="8dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:orientation="vertical">


                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerViewHomeCategory"
                            android:layout_width="match_parent"
                            android:layout_height="170dp"
                            android:baselineAligned="false" />


                    </LinearLayout>
                    
                </androidx.cardview.widget.CardView>
                    
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_below="@+id/relativelayout2"
                android:weightSum="2"
                android:id="@+id/linearOffer"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btnjoinmember"
                    android:background="@drawable/bgback1"
                    android:textColor="@color/colorPrimary"
                    android:text="@string/joinmember"
                    android:layout_width="0dp"
                    android:layout_marginTop="10dp"

                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_join"
                    android:layout_marginLeft="12dp"
                    android:paddingLeft="15dp"
                    android:drawablePadding="10dp"
                    android:layout_marginRight="12dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"
                    android:textAlignment="textStart"
                    android:layout_height="match_parent"/>

                <Button
                    android:id="@+id/btshare"
                    android:background="@drawable/bgback1"
                    android:textColor="@color/colorPrimary"
                    android:text="@string/share"
                    android:layout_width="0dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:drawableLeft="@drawable/ic_send"
                    android:layout_marginRight="12dp"
                    android:textAlignment="textStart"
                    android:paddingLeft="25dp"
                    android:drawablePadding="10dp"
                    android:layout_marginBottom="10dp"


                    android:layout_height="match_parent"/>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layout"
                android:orientation="vertical"
                android:layout_below="@id/linearOffer">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Services"
                    android:id="@+id/tvServices"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="17dp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/ic_arrow"
                    android:layout_marginLeft="17dp"/>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/servicecardlist"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    />

            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout"
                android:layout_marginTop="10dp">
                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/viewPagerService"
                    android:layout_width="match_parent"
                    android:layout_height="125dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    />
                <me.relex.circleindicator.CircleIndicator
                    android:id="@+id/indicatorService"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:layout_marginLeft="15dp"
                    app:ci_drawable="@drawable/indicatorbg"
                    android:layout_below="@+id/viewPagerService"
                    />
            </RelativeLayout>




        </RelativeLayout>



    </ScrollView>


       <ProgressBar
           android:id="@+id/progressBar"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:minHeight="50dp"
           android:visibility="gone"
           android:minWidth="50dp"
           android:layout_centerVertical="true"
           android:layout_centerHorizontal="true" />

   </RelativeLayout>


</FrameLayout>